<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/newsHeaderLayoutId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:orientation="vertical">
        <!--<ImageView-->
            <!--android:id="@+id/newsPublisherIconId"-->
            <!--android:layout_width="80dp"-->
            <!--android:layout_height="80dp"-->
            <!--tools:src="@drawable/no_newspaper"/>-->
        <TextView
            android:id="@+id/newsPublisherNameTextViewId"
            android:orientation="vertical"
            android:fontFamily="@font/helveticaneue_thin"
            android:textSize="@dimen/font_32"
            android:textColor="@color/colorPrimary"
            tools:text="La Stampa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/newsPublisherDescriptionTextViewId"
            android:orientation="vertical"
            android:fontFamily="@font/helveticaneue_thin"
            android:textSize="@dimen/font_18"
            android:layout_marginTop="-10dp"
            android:textColor="@color/colorPrimary"
            tools:text="published at 18:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/newsBookmarkIconId"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|center"
        android:layout_marginEnd="@dimen/margin_16"
        android:src="@drawable/ic_like"/>
    <ProgressBar
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/newspaperProgressbarId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        style="@style/Widget.AppCompat.ProgressBar"/>
</FrameLayout>

