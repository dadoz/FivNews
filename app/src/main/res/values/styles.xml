<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="actionBarStyle">@style/Theme.App.ActionBar</item>-->

    </style>

    <style name="Theme.App.ActionBar" parent="Widget.AppCompat.ActionBar">
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/helveticaneue_thin</item>
    </style>

    <style name="LightNewsStyle.mediumText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/helveticaneue_thin</item>
    </style>

    <style name="LightNewsStyle.mediumText.Primary" parent="LightNewsStyle.mediumText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="LightNewsStyle.titleText.Accent" parent="LightNewsStyle.mediumText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LightNewsStyle.subtitleText.Accent" parent="LightNewsStyle.mediumText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="LightNewsStyle.mediumText_24.Accent" parent="LightNewsStyle.mediumText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="LightNewsStyle.bigText_36.Accent" parent="LightNewsStyle.mediumText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="LightNewsStyle.smallText_14.Primary" parent="LightNewsStyle.mediumText.Primary">
        <item name="android:textSize">@dimen/font_14</item>
    </style>
    <style name="LightNewsStyle.mediumText_24.Primary" parent="LightNewsStyle.mediumText.Primary">
        <item name="android:textSize">@dimen/font_26</item>
    </style>

    <style name="LightNewsStyle.smallText_14.Accent" parent="LightNewsStyle.smallText_14.Primary">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="LightNewsStyle.mediumText_22.Accent" parent="LightNewsStyle.smallText_14.Accent">
        <item name="android:textSize">@dimen/font_22</item>
    </style>

    <style name="LightNewsStyle.mediumText_18.Accent" parent="LightNewsStyle.mediumText_24.Accent">
        <item name="android:textSize">@dimen/font_18</item>
    </style>
    <style name="LightNewsStyle.mediumText_18.Primary" parent="LightNewsStyle.mediumText_24.Primary">
        <item name="android:textSize">@dimen/font_18</item>
    </style>

    <style name="LightNewsStyle.MaterialCardviewLight" parent="Widget.MaterialComponents.CardView">

        <item name="android:layout_marginStart">8dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>

</resources>
